@model IEnumerable<CMCS.Domain.Entities.UserModels.UserModel>

<style>
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: Arial, sans-serif;
    }

    .navbar {
        background-color: #1A237E;
        height: 70px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        box-sizing: border-box;
        z-index: 1000;
    }

        .navbar img {
            height: 50px;
            width: 150px;
        }

        .navbar .nav-links a {
            margin-left: 10px;
            color: white;
            padding: 12px 8px;
            font-size: 15px;
            text-decoration: none;
            background-color: #3B82F6;
            border-radius: 8px;
        }

    .main-content {
        margin-top: 80px;
        padding: 20px;
        background-color: #FFFFFF;
        color: #111111;
        width: 90%;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .table th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .btn {
        margin: 5px;
        padding: 8px 12px;
        border-radius: 5px;
    }
</style>

<!-- Navbar -->
<div class="navbar">
    <img src="/path/to/logo.png" alt="CMCS Logo">
    <div class="nav-links">
        <a asp-controller="UploadDocuments" asp-action="Index">Upload Document</a>
        <a asp-controller="NotFound" asp-action="Index">Profile</a>
        <a asp-controller="NotFound" asp-action="Index">Help/Support</a>
        <a asp-controller="NotFound" asp-action="Index">Logout</a>
    </div>
</div>

<!-- Main Content -->
<div class="main-content">
    <h2>Manage Lecturers</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lecturer in Model)
            {
                <tr>
                    <td>@lecturer.Name</td>
                    <td>@lecturer.Email</td>
                    <td>@lecturer.MobileNumber</td>
                    <td>
                        <a href="@Url.Action("EditLecturer", new { id = lecturer.UserId })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("DeleteLecturer", new { id = lecturer.UserId })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("CreateLecturer")" class="btn btn-primary">Add New Lecturer</a>
</div>
