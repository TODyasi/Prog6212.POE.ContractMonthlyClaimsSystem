@model CMCS.Domain.Entities.UserModels.UserModel

<style>
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: Arial, sans-serif;
    }

    .navbar {
        background-color: #1A237E;
        height: 70px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        box-sizing: border-box;
        z-index: 1000;
    }

    .navbar img {
        height: 50px;
        width: 150px;
    }

    .navbar .nav-links a {
        margin-left: 10px;
        color: white;
        padding: 12px 8px;
        font-size: 15px;
        text-decoration: none;
        background-color: #3B82F6;
        border-radius: 8px;
    }

    .main-content {
        margin-top: 70px;
        padding: 20px;
        background-color: #FFFFFF;
        color: #111111;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        text-align: center;
    }

    .btn {
        margin: 10px 5px;
    }

    .alert {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid transparent;
        border-radius: 4px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }
</style>

<!-- Navbar -->
<div class="navbar">
    <img src="/path/to/logo.png" alt="CMCS Logo">
    <div class="nav-links">
        <a asp-controller="UploadDocuments" asp-action="Index">Upload Document</a>
        <a asp-controller="NotFound" asp-action="Index">Profile</a>
        <a asp-controller="NotFound" asp-action="Index">Help/Support</a>
        <a asp-controller="NotFound" asp-action="Index">Logout</a>
    </div>
</div>

<!-- Main Content -->
<div class="main-content">
    <h2>Delete Lecturer</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <p>Are you sure you want to delete the lecturer <strong>@Model.Name</strong>?</p>

    <form method="post" asp-action="DeleteLecturerConfirmed" asp-route-id="@Model.UserId">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ManageLecturers")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
