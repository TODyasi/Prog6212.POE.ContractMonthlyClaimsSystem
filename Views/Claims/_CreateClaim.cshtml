@model ClaimsBaseModel

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create New Claim</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form asp-action="CreateClaim" method="post" class="row" enctype="multipart/form-data">
            <div class="p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Title" class="form-control border shadow" required />
                    <label asp-for="Title" class="ms-2">Enter Claim Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <textarea asp-for="Description" class="form-control border shadow"></textarea>
                    <label asp-for="Description" class="ms-2">Enter Claim Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="ClaimType" class="form-control border shadow" required />
                    <label asp-for="ClaimType" class="ms-2">Enter Claim Type</label>
                    <span asp-validation-for="ClaimType" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="HoursWorked" type="number" class="form-control border shadow" step="0.01" required />
                    <label asp-for="HoursWorked" class="ms-2">Hours Worked This Month</label>
                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="HourlyRate" type="number" class="form-control border shadow" step="0.01" required />
                    <label asp-for="HourlyRate" class="ms-2">Lecturer Hourly Rate</label>
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <textarea asp-for="AdditionalNotes" class="form-control border shadow"></textarea>
                    <label asp-for="AdditionalNotes" class="ms-2">Additional Notes For Reviewer</label>
                    <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Submit Claim
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Claims" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}